name:                visor
version:             0.1.0.0
synopsis:            Simple project template from stack
description:         Please see README.md
homepage:            https://github.com/jonascarpay/visor#readme
license:             BSD3
license-file:        LICENSE
author:              Jonas Carpay
maintainer:          jonascarpay@gmail.com
copyright:           2016 Jonas Carpay
category:            Web
build-type:          Simple
cabal-version:       >=1.10

library
  hs-source-dirs:      src, spec
  default-language:    Haskell2010
  exposed-modules:     Game
                     , Util
                     , Conduits
                     , Games.Melee
                     , Volume
                     , Label
                     , Images
                     , ConvNet
                     , Visor
                     , Cifar
  build-depends:       base
                     , hmatrix
                     , vector
                     , directory
                     , filepath
                     , split
                     , random
                     , unix
                     , bytestring
                     , cereal
                     , conduit-combinators
                     , conduit-extra
                     , cereal-conduit
                     , resourcet
                     , transformers
                     , process
                     , deepseq
                     , repa
                     , repa-algorithms
                     , JuicyPixels
                     , JuicyPixels-extra
                     , random-shuffle
  ghc-options:        -Wall
                      -fno-warn-name-shadowing
                      -fno-warn-orphans
                      -O2
executable visor-app
  hs-source-dirs:      app
  default-language:    Haskell2010
  ghc-options:        -Wall
                      -fno-warn-name-shadowing
                      -fno-warn-orphans
                      -fno-warn-unused-matches
                      -fno-warn-missing-signatures
                      -O2
                      -threaded
  main-is:             main.hs
  build-depends:       base
                     , visor
                     , hmatrix
                     , QuickCheck
                     , conduit-combinators
                     , stm-conduit

test-suite visor-spec
  type:                exitcode-stdio-1.0
  main-is:             Main.hs
  default-language:    Haskell2010
  other-modules:       VolumeSpec
  ghc-options:        -Wall
                      -fno-warn-name-shadowing
                      -fno-warn-orphans
                      -fno-warn-missing-signatures
                      -O2
                      -threaded
  hs-source-dirs:      spec
  build-depends:       base
                     , visor
                     , QuickCheck
                     , repa
                     , cereal
